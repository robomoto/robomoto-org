<% layout('layouts/boilerplate') %> 

<h1>Education</h1>

    <% for(let degree of degrees){ %>
    <article class="degree">
        <div class="degreeContent">
            <h3 class="title"><%= degree.degree %></h3>
            <div><%= degree.school%></div>
            <div><%= degree.gradYear%></div>
            <% if(degree.classes.length > 0){ %>
                <ul>
                <% for(each of degree.classes){ %> 
                    <li><%= each %></li>
                <% } %>
                </ul>
            <% } %>
        </div>
    </article>
    <% } %> 

